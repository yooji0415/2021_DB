    <h1>로그인</h1>
    <form id="deparment" method="post" action='/'>
        <div class="id">
            <input id="id" name="id" type="text" required="required" placeholder="아이디">
        </div>
            <div class="pwd">
                <input
                    id="passwd"
                    name='password'
                    type="password"
                    required="required"
                    placeholder="비밀번호">
